<body>
    {{>navbar}}
    <!-- main headeer -->
    <div class="container-fluid main_header">
        <div class="row">
        <div class="col-md-10 col-12 mx-auto">
<div class="row">
    <!-- left div -->
    <div class="col-md-6 col-12 main_header_left">
    <p>Welcome To Weather App</p>
    <h1>Get The Latest <span class="text_clr">Weather</span> Info Of Your City</h1>
    <a href="/weather"><button>Check Now</button></a></div>
    <!-- right div -->
    <div class="col-md-6 col-12 main_header_right">
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
              <li data-target="#demo" data-slide-to="0" class="active"></li>
              <li data-target="#demo" data-slide-to="1"></li>
              <li data-target="#demo" data-slide-to="2"></li>
            </ul>
          
            <!-- The slideshow -->
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class=" d-flex w-100" src="images/bg1.png" height="300" width="120" alt="Los Angeles">
              </div>
              <div class="carousel-item">
                <img class="d-flex w-100" src="images/bg2-removebg-preview.png" height="300" width="120" alt="Chicago">
              </div>
              <div class="carousel-item">
                <img class="d-flex w-100" src="images/bg3-removebg-preview.png" height="300" width="120" alt="New York">
              </div>
            </div>
          <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
            
          
          </div>
    </div>
</div>
